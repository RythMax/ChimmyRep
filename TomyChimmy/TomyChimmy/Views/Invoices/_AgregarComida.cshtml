@model TomyChimmy.Models.InvoiceDetail

<h4>InvoiceDetail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="_AgregarComida">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ID_Comidas" class="control-label"></label>
                <select asp-for="ID_Comidas" class ="form-control" asp-items="ViewBag.ID_Comidas"></select>
            </div>
            <div class="form-group">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" class="form-control" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none">
                <label asp-for="Invoice_ID" class="control-label"></label>
                <input asp-for ="Invoice_ID" class="form-control" value="@ViewData["id"].ToString()"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                @*<input type="submit" value="Create" class="btn btn-primary" />*@
            </div>
        </form>
    </div>
</div>

