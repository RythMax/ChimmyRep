@model IEnumerable<TomyChimmy.Models.Food>

@{
    ViewData["Title"] = "Our Product Collection";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Shop our @ViewBag.FoodType</h1>

<section>
    <div class="row">
        @foreach(var item in Model)
        {
            <div class="col-sm-6 col-lg-4 mb-3">
                <div class="card-mb-3 text-center h-100">
                    <div class="card-body">
                        <a asp-controller="Shop" asp-action="ProductDetails" asp-route-products="@item.Descripción">@item.Descripción</a>
                        <h5> @String.Format("RD$" + item.PrecioUnitario) </h5>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
