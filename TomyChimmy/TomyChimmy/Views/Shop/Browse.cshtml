@model IEnumerable<TomyChimmy.Models.Food>

@{
    ViewData["Title"] = "Our Product Collection";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Shop our @ViewBag.FoodType</h1>

<section>
    <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
        @foreach(var item in Model)
        {
            <div class="col mb-5">
            <div class="card h-100">
                <!-- Product image-->
                <img class="card-img-top" src="@item.ImageUrl" alt="..." />
                <!-- Product details-->
                <div class="card-body p-4">
                    <div class="text-center">
                        <!-- Product name-->
                        <h5 class="fw-bolder">@item.Descripción</h5>
                        <!-- Product price-->
                        @String.Format("RD$" + item.PrecioUnitario)
                </div>
                </div>
                <!-- Product actions-->
                <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                    <div class="text-center"><a class="btn btn-outline-dark mt-auto" asp-controller = "Shop" asp-action="ProductDetails" asp-route-products="@item.Descripción">Ver Producto</a></div>
                </div>
            </div>
        </div>
        }
    </div>
</section>
